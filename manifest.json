{
    "manifest_version": 2,

    "name": "Procrastinatr",
    "description": "If you have trouble focusing, this extension will keep you on track by blocking certain websites",
    "version": 1.0,

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "Procrastinatr"
    },

    "background": { "scripts": ["background.js"] },

    "options_page": "options.html",

    "permissions": [
        "activeTab",
        "alarms",
        "browsingData",
        "tabs",
        "storage",
        "webRequest",
        "webRequestBlocking",
        "http://*/*", 
        "https://*/*"
    ]
}